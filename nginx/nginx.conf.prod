server {
    listen 80;
    server_name sample-docker.com;

    location / {
        proxy_pass http://frontend:3000;
    }

    location /api {
        rewrite ^/api/(.*) /$1 break;
        proxy_pass http://api:5000;
    }

    location /auth/api {
        rewrite ^/auth/api/(.*) /$1 break;
        proxy_pass http://auth:5001;
    }
}